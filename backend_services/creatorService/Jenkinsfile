pipeline {
    agent any
    environment {
        SERVICE_NAME = 'creatorService'
        WORKSPACE_DIR = "backend_services/${SERVICE_NAME}"
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'micro_service_additions',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('List Root Directory') {
            steps {
                sh 'ls -la'  // Lists the contents of the root directory
            }
        }
        stage('Verify Directory Structure') {
            steps {
                dir(WORKSPACE_DIR) {
                    sh 'ls -la'  // Lists files in creatorService to verify build-script.sh
                }
            }
        }
        stage('Build') {
            steps {
                dir(WORKSPACE_DIR) {
                    sh 'chmod +x build-script.sh'
                    sh './build-script.sh'
                }
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed. Check the logs for more details.'
        }
    }
}
