pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('List All Files in Workspace') {
            steps {
                // Print the full directory structure to check where build-script.sh is located
                sh 'ls -Rla'
                sh 'find . -type f'
            }
        }
        stage('Build') {
            steps {
                // Attempt to run the build script with different paths for debugging
                sh 'chmod +x build-script.sh || chmod +x */build-script.sh || chmod +x */*/build-script.sh'
                sh './build-script.sh || ./*/build-script.sh || ./*/*/build-script.sh'
            }
        }
    }
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed. Check the logs for details.'
        }
    }
}
