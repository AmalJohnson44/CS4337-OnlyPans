pipeline {
    agent any
    tools {
        gradle 'Gradle 7.0'  // Ensure this matches the name configured in Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Build') {
            steps {
                dir('backend_services/creatorService') {
                    sh 'gradle build'
                }
            }
        }
        stage('Test') {
            steps {
                dir('backend_services/creatorService') {
                    sh 'gradle test'
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('backend_services/creatorService') {
                    sh 'echo "Deploying creatorService..."'
                }
            }
        }
    }
    post {
        success {
            echo 'Build, Test, and Deployment Successful for creatorService!'
        }
        failure {
            echo 'Build, Test, or Deployment Failed for creatorService. Check the logs for details.'
        }
        always {
            echo 'Pipeline for creatorService completed.'
        }
    }
}
