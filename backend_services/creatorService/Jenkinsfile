pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'micro_service_additions',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Verify Workspace Structure') {
            steps {
                sh 'ls -la'  // List all files in the workspace root
                sh 'find . -name "build-script.sh"'  // Locate the script
            }
        }
        stage('Build') {
            steps {
                // Adjust the path if the file is located in a subdirectory
                sh 'chmod +x build-script.sh || chmod +x CS4337-OnlyPans/build-script.sh'
                sh './build-script.sh || ./CS4337-OnlyPans/build-script.sh'
            }
        }
    }
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed. Check the logs for details.'
        }
    }
}
