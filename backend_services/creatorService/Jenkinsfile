pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Verify Workspace Structure') {
            steps {
                sh 'ls -Rla'  // Lists the directory structure for verification
                sh 'find . -name "build-script.sh"'  // Confirms the location of build-script.sh
            }
        }
        stage('Build') {
            steps {
                // Ensure build-script.sh is executable and run it
                sh 'chmod +x build-script.sh'
                sh './build-script.sh'
            }
        }
        stage('Test') {
            steps {
                // Add your test commands or script here
                sh 'echo "Running tests for the service..."'
                // Example: sh './test-script.sh' (replace with actual test script if available)
            }
        }
        stage('Deploy') {
            steps {
                // Add your deployment commands or script here
                sh 'echo "Deploying the service..."'
                // Example: sh './deploy-script.sh' (replace with actual deploy script if available)
            }
        }
    }
    post {
        success {
            echo 'Build, Test, and Deployment Successful!'
        }
        failure {
            echo 'Build, Test, or Deployment Failed. Check the logs for details.'
        }
        always {
            echo 'Pipeline completed.'
        }
    }
}
