pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Verify Directory Structure') {
            steps {
                sh 'ls -la'  // List files in the root directory
                sh 'find . -name "build-script.sh"'  // Search for the build-script.sh file
            }
        }
        stage('Build') {
            steps {
                // Adjust the path if the script is in a subdirectory (e.g., backend_services)
                dir('backend_services') {  // Replace with the correct path if needed
                    sh 'chmod +x build-script.sh'
                    sh './build-script.sh'
                }
            }
        }
    }
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed. Check the logs for details.'
        }
    }
}
