pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('List All Files in Workspace') {
            steps {
                sh 'ls -Rla'  // List the entire directory structure to find build-script.sh
                sh 'find . -name "build-script.sh"'  // Locate build-script.sh
            }
        }
        stage('Build') {
            steps {
                // Ensure the correct directory path is used
                sh 'chmod +x build-script.sh || true'  // Skip if not found for debugging
                sh './build-script.sh || echo "build-script.sh not found"'
            }
        }
    }
    post {
        success {
            echo 'Build successful!'
        }
        failure {
            echo 'Build failed. Check the logs for details.'
        }
    }
}
