pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'micro_service_additions',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Verify Entire Workspace Structure') {
            steps {
                sh 'ls -Rla'  // List the entire directory structure to check where files are located
            }
        }
    }
    post {
        always {
            echo 'Verification stage completed.'
        }
    }
}
