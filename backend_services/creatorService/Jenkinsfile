pipeline {
    agent any
    tools {
        // Specify Gradle or Maven if configured in Jenkins; adjust the name as needed
        gradle 'Gradle 8.0'  // If you prefer Maven, use 'Maven 3.8.1'
    }
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Build') {
            steps {
                dir('backend_services/creatorService') {
                    // Build the project using Gradle or Maven
                    bat './gradle build'  // Replace with 'mvn clean package' if using Maven
                }
            }
        }
        stage('Test') {
            steps {
                dir('backend_services/creatorService') {
                    // Run tests using Gradle or Maven
                   // bat './gradlew test'  // Replace with 'mvn test' if using Maven
                }
            }
        }
        stage('Deploy') {
            steps {
                dir('backend_services/creatorService') {
                    // Custom deploy logic; replace with your own deployment steps
                    bat 'echo "Deploying CreatorServiceApplication..."'
                    // Example: Copy JAR file to a deployment directory or server
                    //bat 'cp build/libs/creatorService-1.0.0.jar /path/to/deployment/directory/'  // Update path as needed
                }
            }
        }
    }
    post {
        success {
            echo 'Build, Test, and Deployment Successful for CreatorServiceApplication!'
        }
        failure {
            echo 'Build, Test, or Deployment Failed. Check the logs for details.'
        }
        always {
            echo 'Pipeline for CreatorServiceApplication completed.'
        }
    }
}
