pipeline {
    agent any
    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'micro_service_additions',
                    url: 'https://github.com/AmalJohnson44/CS4337-OnlyPans.git'
            }
        }
        stage('Verify Directory Structure') {
            steps {
                sh 'ls -la'  // List files in the root directory to verify build-script.sh is present
            }
        }
        stage('Build') {
            steps {
                // Ensure build-script.sh is executable and run it
                sh 'chmod +x build-script.sh'
                sh './build-script.sh'
            }
        }
        stage('Test') {
            steps {
                // Add your test steps here if needed
                sh 'echo "Running tests for the service..."'
            }
        }
        stage('Deploy') {
            steps {
                // Add your deployment steps here if needed
                sh 'echo "Deploying the service..."'
            }
        }
    }
    post {
        success {
            echo 'Build, Test, and Deployment Successful!'
        }
        failure {
            echo 'Build, Test, or Deployment Failed. Check the logs.'
        }
        always {
            echo 'Pipeline completed.'
        }
    }
}
